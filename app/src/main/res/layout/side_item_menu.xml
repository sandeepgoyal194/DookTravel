<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto/com.softmine.dooktravel.util"
    >

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <ImageView
            android:id="@+id/ivIcon"
            android:minWidth="80dp"
            android:src="@drawable/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp" />

        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_margin="20dp"
            android:visibility="gone"
            android:tint="@color/white" />

        <com.softmine.dooktravel.util.CustomTextView
            custom:typeface="proxima-nova-semibold.otf"
            android:layout_marginLeft="15dp"
            android:id="@+id/tvMenuName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/ivArrow"
            android:layout_toRightOf="@id/ivIcon"
            android:text="@string/app_name"
            android:textColor="@color/side_item_color"
            android:textSize="18sp" />

    </RelativeLayout>


</RelativeLayout>
