<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bg"
        app:layout_collapseMode="none"
        app:titleTextColor="@color/white"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:titleTextAppearance="@style/Toolbar.TitleText" />


    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvProfessionalDetail"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/light_grey"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="@string/professional_detail"
                    android:textColor="@color/grey3"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/back_basic_detail"
                    android:gravity="center"
                    android:orientation="vertical">

                  <!--  <android.support.design.widget.TextInputLayout
                        android:id="@+id/ed_layout_firstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        >-->

                        <EditText
                            android:id="@+id/edOrganization"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/organization"
                            android:lines="1"
                            android:textColorHint="@color/hint"
                            android:singleLine="true"
                            android:textColor="@color/pilot"
                            android:textSize="14sp" />
                 <!--   </android.support.design.widget.TextInputLayout>-->

                   <!-- <android.support.design.widget.TextInputLayout
                        android:id="@+id/ed_layout_MiddleName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"

                        >-->

                        <EditText
                            android:id="@+id/edDesignation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:layout_marginTop="5dp"
                            android:hint="@string/designation"
                            android:textColorHint="@color/hint"
                            android:lines="1"
                            android:textColor="@color/pilot"
                            android:textSize="14sp" />
                 <!--   </android.support.design.widget.TextInputLayout>
-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:visibility="gone"
                                android:id="@+id/tvCategory"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/category"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <Spinner
                                android:id="@+id/spinner_category"
                                style="@style/SpinnerTheme"
                                android:layout_width="105dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="2dp"
                                android:entries="@array/category" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="5dp"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="vertical">

                            <TextView
                                android:visibility="gone"

                                android:id="@+id/tvWorkingHour"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/working_since"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_working_since"
                                android:layout_width="105dp"
                                android:layout_height="40dp"
                                android:layout_gravity="right|end"
                                android:layout_marginTop="2dp"
                                android:background="@drawable/view_back_border"
                                android:gravity="center"
                                android:singleLine="true"
                                android:hint="@string/working_since"
                                android:textColor="@color/black"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvCurrentAddress"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/light_grey"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="@string/current_address"
                    android:textColor="@color/grey3"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/back_basic_detail"
                    android:gravity="center"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvCountry"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/country"
                                android:visibility="gone"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <Spinner
                                android:id="@+id/spinner_country"
                                style="@style/SpinnerTheme"
                                android:layout_width="105dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="2dp"
                                 />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvCity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/city"
                                android:visibility="gone"

                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <Spinner
                                android:id="@+id/spinner_city"
                                style="@style/SpinnerTheme"
                                android:layout_width="105dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="2dp"

                                android:gravity="center"
                                android:hint="@string/dob" />
                        </LinearLayout>
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvProvince"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/province"
                                android:visibility="gone"

                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <Spinner
                                android:id="@+id/spinner_province"
                                style="@style/SpinnerTheme"
                                android:layout_width="105dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="2dp"
                                />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvPostalCode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lines="1"
                                android:visibility="gone"
                                android:text="@string/zip"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/et_Postal"
                                android:layout_width="105dp"
                                android:layout_height="40dp"
                                android:lines="1"
                                android:textSize="14sp"
                                android:hint="@string/zip"
                                android:layout_gravity="right|end"
                                android:layout_marginTop="2dp"
                                android:background="@drawable/view_back_border"
                                android:textColorHint="@color/hint"
                                android:gravity="center"
                                android:singleLine="true"
                                android:inputType="number"
                                android:maxLength="6"
                                android:textColor="@color/black" />
                        </LinearLayout>
                    </RelativeLayout>

                   <!-- <android.support.design.widget.TextInputLayout
                        android:id="@+id/ed_layout_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:lines="1"
                        >-->

                        <EditText
                            android:id="@+id/edAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/address"
                            android:singleLine="true"
                            android:lines="1"
                            android:layout_marginTop="5dp"
                            android:textColorHint="@color/hint"
                            android:textColor="@color/pilot"
                            android:textSize="14sp" />
                 <!--   </android.support.design.widget.TextInputLayout>
-->

                </LinearLayout>


            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvAboutUs"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/light_grey"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="@string/about_me"
                    android:textColor="@color/grey3"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edAboutMe"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="15dp"
                    android:paddingLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/pilot"
                    android:background="@drawable/view_back_border"
                    android:maxLength="250"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvTextCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="100dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="2dp"
                    android:hint="@string/tv_no_of_char" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout

        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_round"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="16sp" />
        </RelativeLayout>
</RelativeLayout>
