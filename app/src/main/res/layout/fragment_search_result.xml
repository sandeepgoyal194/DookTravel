<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context="com.softmine.dooktravel.fragments.FragmentSearchResult">
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView
        android:layout_marginTop="5dp"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:background="@color/light_grey"
        android:text="@string/search_result"
        android:textSize="16sp"
        android:id="@+id/tvSearchResult"
        android:textColor="@color/grey3"
        android:layout_width="match_parent"
        android:layout_height="30dp" />


        <EditText
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/etkeyword"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:imeOptions="actionNext"
            android:lines="6"
            android:hint="@string/keyword"
            android:textColorHint="@color/black"
            android:layout_marginTop="15dp"
            android:background="@drawable/view_back_border"
            android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/back_basic_detail"
        android:gravity="center"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category"
                    android:textSize="12sp" />

                <Spinner

                    style="@style/SpinnerTheme"
                    android:id="@+id/spinner_country"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"
                    android:entries="@array/country"
                    />
            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical">
                <TextView
                    android:visibility="gone"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/working_since"
                    android:textSize="12sp" />

                <Spinner
                    android:id="@+id/spinner_state"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"
                    android:hint="@string/dob"
                    android:gravity="center"
                    android:entries="@array/state"
                    style="@style/SpinnerTheme"
                    />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category"
                    android:textSize="12sp" />

                <Spinner
                    android:id="@+id/spinner_filter_category"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    style="@style/SpinnerTheme"
                    android:entries="@array/category"
                    />
            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>
        <Button
            android:id="@+id/search_go_btn"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_round"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="150dp"
            android:text="@string/go"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"/>
</LinearLayout>



</RelativeLayout>
