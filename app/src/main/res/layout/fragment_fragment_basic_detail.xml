<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:context="com.softmine.dooktravel.fragments.FragmentBasicDetail">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
    <RelativeLayout
        android:id="@+id/rl_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/grey"
        android:scaleType="fitXY"
         />
        <TextView
            android:id="@+id/tvUpload"
            android:layout_marginTop="135dp"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:background="@drawable/transparent_back"
            android:text="@string/upload_image"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <!-- TODO: Update blank fragment layout -->



        <LinearLayout
            android:layout_below="@id/imgProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvBasicDetail"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@color/light_grey"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="@string/basic_details"
                android:textColor="@color/grey3"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/back_basic_detail"
                android:gravity="center"
                android:orientation="vertical">

           <!--     <android.support.design.widget.TextInputLayout
                    android:id="@+id/ed_layout_firstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    >-->

                    <EditText
                        android:id="@+id/edFirstname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/first_name"
                        android:imeOptions="actionNext"
                        android:lines="1"
                        android:textColorHint="@color/hint"
                        android:singleLine="true"
                        android:textColor="@color/pilot"
                        android:textSize="14sp" />
               <!-- </android.support.design.widget.TextInputLayout>-->

               <!-- <android.support.design.widget.TextInputLayout
                    android:id="@+id/ed_layout_MiddleName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    >-->

                    <EditText
                        android:id="@+id/edMiddleName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:hint="@string/middle_name"
                        android:singleLine="true"
                        android:textColorHint="@color/hint"
                        android:lines="1"
                        android:textColor="@color/pilot"
                        android:textSize="14sp" />
               <!-- </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/ed_layout_LastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    >

-->
                    <EditText
                        android:id="@+id/edlastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:hint="@string/last_name"
                        android:imeOptions="actionDone"
                        android:lines="1"
                        android:textColorHint="@color/hint"
                        android:singleLine="true"
                        android:textColor="@color/pilot"
                        android:textSize="14sp" />
               <!-- </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/ed_layout_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    >-->


                    <EditText
                        android:id="@+id/edPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:hint="@string/password_ed"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:textColorHint="@color/hint"
                        android:singleLine="true"
                        android:textColor="@color/pilot"
                        android:textSize="14sp" />
               <!-- </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/ed_layout_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                   >-->


                    <EditText
                        android:id="@+id/edConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:hint="@string/confirm_password"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:textColorHint="@color/hint"
                        android:singleLine="true"
                        android:textColor="@color/pilot"
                        android:textSize="14sp" />
              <!--  </android.support.design.widget.TextInputLayout>
-->
                <RelativeLayout
                    android:layout_marginTop="5dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvGender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gender"
                            android:visibility="gone"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <Spinner
                            android:id="@+id/spinner_gender"
                            style="@style/SpinnerTheme"
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="2dp"
                            android:entries="@array/gender" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical">

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tvdateOfBirth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/date_of_birth"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/spinner_dob"
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="2dp"
                            android:background="@color/white"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:lines="1"
                            android:hint="@string/date_of_birth"
                            android:textColor="@color/black"
                            android:textColorHint="@color/hint" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tvMaritalStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/marital_status"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <Spinner
                            android:id="@+id/spinner_marital_status"
                            style="@style/SpinnerTheme"
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:layout_marginBottom="80dp"
                            android:layout_marginTop="2dp"
                            android:entries="@array/marital_status" />
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
    </ScrollView>

    <RelativeLayout

        android:layout_centerVertical="true"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/btnNext"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:background="@drawable/button_round"
        android:text="@string/next"
        android:textColor="@color/white"
        android:textSize="16sp" />
    </RelativeLayout>
</RelativeLayout>
